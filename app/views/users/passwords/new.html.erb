<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8" >

      <p class="font-18 bold margin-t-15">パスワードを再発行する</p>
      <hr>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="margin-b-30">
			    <%= f.label :email, "メールアドレス" %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text-width-100" %>
			  </div>

			  <div class="actions">
			    <%= f.submit "再発行メールを送信", class: "margin-b-80 prim-btn" %>
			  </div>
			<% end %>

			<%= render "users/shared/links" %>

    </div><!-- End of col-12 -->
  </div><!-- End of row -->
</div><!-- End of container -->

<%= render :partial => 'footer/footer_not_selected' %>