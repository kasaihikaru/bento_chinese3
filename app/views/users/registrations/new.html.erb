<div class="login">
  <h2>ユーザー登録をして勉強を始めよう</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, maxlength: "8", placeholder: "BENTO" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス(非公開)" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "bento@example.com" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <%= @minimum_password_length %>文字以上
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ユーザー登録" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
