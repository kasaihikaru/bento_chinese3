<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8" >

      <p class="font-18 bold margin-t-15">ログイン</p>
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages %>

        <div class="margin-b-30">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text-width-100" %>
        </div>

        <div class="margin-b-30">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input-text-width-100" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="margin-b-30">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を保持" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "margin-b-80 prim-btn" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>


    </div><!-- End of col-12 -->
  </div><!-- End of row -->
</div><!-- End of container -->

<%= render :partial => 'footer/footer_not_selected' %>