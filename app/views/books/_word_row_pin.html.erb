<!-- ログインしてるが、自分じゃない -->
<% if user_signed_in? && word.sentence.book.user_id != current_user.id %>
	<th scope="col"><%= word.pin %></th>
	<th scope="col"><%= word.ch %></th>
	<th scope="col"><%= word.ja %></th>



<!-- ログインして、自分 -->
<% elsif user_signed_in? && word.sentence.book.user_id == current_user.id %>
	<% if word.memorized_pin == false %>
		<th scope="col">
			<%= link_to edit_word_path(word, redirect_flg: "word_pin") do %>
				<%= render :partial => 'svg/edit_sm' %>
			<% end %>
		</th>
		<th scope="col"><%= word.pin %></th>
		<th scope="col">
			<%= link_to word_check_pin_path(word), class: "", method: :put, remote: true do %>
				<%= render :partial => 'svg/check_sm' %>
			<% end %>
		</th>
		<th scope="col"><%= word.ch %></th>
		<th scope="col"><%= word.ja %></th>
	<% else %>
		<th scope="col" class="bg-second">
			<%= link_to edit_word_path(word) do %>
				<%= render :partial => 'svg/edit_sm' %>
			<% end %>
		</th>
		<th scope="col" class="bg-second"><%= word.pin %></th>
		<th scope="col" class="bg-second">
			<%= link_to word_uncheck_ja_path(word), class: "", method: :put, remote: true do %>
				<%= render :partial => 'svg/check_sm' %>
			<% end %>
		</th>
		<th scope="col" class="bg-second"><%= word.ch %></th>
		<th scope="col" class="bg-second"><%= word.ja %></th>
	<% end %>





<!-- ログインしていない -->
<% else %>
	<th scope="col"><%= word.pin %></th>
	<th scope="col"><%= word.ch %></th>
	<th scope="col"><%= word.ja %></th>
<% end %>